:ruby
  is_own_message = message.sender_id == current_user.id

- if is_own_message
  %li.right.clearfix
    .chat-body.clearfix
      .header.pull-right
        .row.pull-right{style: 'padding: 0px 10px;'}
          %small.text-muted
            %span.glyphicon.glyphicon-time
            = "#{time_ago_in_words(message.created_at)} ago"
          %strong.primary-font
            = message.sender.try(:display_name)
        .row{style: 'padding: 0px 10px;'}
          %p.pull-right
            = message.body
- else 
  %li.left.clearfix
    .chat-body.clearfix
      .header
        .row{style: 'padding: 0px 10px;'}
          %strong.primary-font 
            = message.sender.try(:display_name)
          %small.text-muted
            %span.glyphicon.glyphicon-time
            = "#{time_ago_in_words(message.created_at)} ago"
        .row{style: 'padding: 0px 10px;'}  
          %p
            = message.body
